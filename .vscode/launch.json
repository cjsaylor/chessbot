	"version": "0.2.0",
	"configurations": [
		{
			"name": "REPL",
			"type": "go",
			"request": "attach",
			"mode": "remote",
			"remotePath": "${workspaceFolder}",
			"port": 2345,
			"host": "127.0.0.1",
			// I have version 1 installed for now, change to 2 if you have the newer `dlv`
			"apiVersion": 1,
			"preLaunchTask": "delve REPL remote"
		},
		{
			"name": "Web",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "${workspaceFolder}/cmd/web/web.go",
			"env": {},
			"envFile": "${workspaceFolder}/.env",
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}